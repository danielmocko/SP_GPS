<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <fragment
            android:id="@+id/add_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.example.mocko.someprojectandroid.AddAdminFragment"
            tools:ignore="MissingConstraints"
            >
        </fragment>

        <fragment
            android:id="@+id/list_of_admins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.example.mocko.someprojectandroid.adapter_list_item.AdminListFragment"
            >
        </fragment>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>